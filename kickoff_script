## Make desktop pretty

gsettings set ﻿org.mate.caja.desktop font 'Liberation Sans Narrow Condensed 10'
gsettings set org.mate.caja.desktop font 'Liberation Sans Narrow Condensed 10'
gsettings set org.mate.Marco.general titlebar-font 'Liberation Sans Bold 11'
gsettings set org.mate.Marco.general titlebar-font 'Liberation Sans Bold 11'
gsettings set org.mate.interface monospace-font-name 'Liberation Mono 11'
gsettings set org.mate.interface font-name 'Liberation Sans Narrow Condensed 11'
gsettings set org.mate.interface document-font-name 'Liberation Sans 11'

    # set wallpaper
    # remove sfx scheme






#################################
### Section: Install software ###
#################################

sudo apt-get -y update 
sudo apt-get -y install preload whois filezilla p7zip-full minicom dnsutils keepassx curl vlc remmina git tcpdump default-jre gksu iperf3 openssh-server openssh-client traceroute hping3 mercurial fonts-droid fonts-noto fonts-inconsolata ubuntu-restricted-extras mtr wireshark tcpdump 

## Chrome
wget https://dl.google.com/linux/direct/google-chrome-stable_current_amd64.deb 
sudo dpkg -i google-chrome*.deb
## optional:  sudo apt -y remove firefox*




#####################
## Section: Python ##
#####################

## Python & Tools
sudo apt-get -y install python3 idle3 

## PIP
cd ~
wget https://bootstrap.pypa.io/get-pip.py
sudo python3 get-pip.py

## Install PyCharm IDE
sudo add-apt-repository ppa:mystic-mirage/pycharm
sudo apt-get -y update && sudo apt-get -y install pycharm-community



#####################
## Section: InSync ##
#####################

echo "deb http://apt.insynchq.com/ubuntu $(lsb_release -cs) non-free" | sudo tee /etc/apt/sources.list.d/insync.list
wget -O - https://d2t3ff60b2tol4.cloudfront.net/services@insynchq.com.gpg.key | sudo apt-key add -
sudo apt-get - y update && sudo apt-get -y install insync



############################
## Section: Network Tools ##
############################

sudo apt-get -y install ntop iftop jnettop nethogs cdpr mtr ngrep netcat nmap snmp ethtool libncursesw5-dev libssl-dev libgdbm-dev libc6-dev libsqlite3-dev tk-dev ettercap-graphical nuttcp wireshark python-scapy namebench

